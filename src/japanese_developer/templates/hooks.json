{
  "SessionStart": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "bash ~/.gemini/hooks/enforce-japanese.sh",
          "name": "enforce-japanese",
          "description": "全出力を日本語に強制する"
        }
      ]
    }
  ],
  "BeforeTool": [
    {
      "matcher": "run_shell_command|execute_command|shell",
      "hooks": [
        {
          "type": "command",
          "command": "bash ~/.gemini/hooks/interactive-guard.sh",
          "name": "interactive-guard",
          "description": "対話型コマンド検知・サーバーBG強制",
          "timeout": 5000
        }
      ]
    }
  ],
  "AfterTool": [
    {
      "matcher": "run_shell_command|execute_command|shell",
      "hooks": [
        {
          "type": "command",
          "command": "bash ~/.gemini/hooks/auto-worklog.sh",
          "name": "auto-worklog",
          "description": "git commit後にlogs/へ自動追記する",
          "timeout": 10000
        },
        {
          "type": "command",
          "command": "bash ~/.gemini/hooks/pr-log-sync.sh",
          "name": "pr-log-sync",
          "description": "git push後にPRへ作業ログをコメント投稿する",
          "timeout": 15000
        }
      ]
    }
  ]
}
