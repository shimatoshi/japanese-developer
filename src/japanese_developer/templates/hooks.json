{
  "SessionStart": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "bash ~/.gemini/hooks/enforce-japanese.sh",
          "name": "enforce-japanese",
          "description": "全出力を日本語に強制する"
        }
      ]
    }
  ],
  "BeforeTool": [
    {
      "matcher": "run_shell_command|execute_command|shell",
      "hooks": [
        {
          "type": "command",
          "command": "bash ~/.gemini/hooks/block-server-start.sh",
          "name": "block-server-start",
          "description": "サーバー起動コマンドをブロックする",
          "timeout": 5000
        }
      ]
    }
  ],
  "AfterTool": [
    {
      "matcher": "run_shell_command|execute_command|shell",
      "hooks": [
        {
          "type": "command",
          "command": "bash ~/.gemini/hooks/auto-worklog.sh",
          "name": "auto-worklog",
          "description": "git commit後にWORK_LOG.mdへ自動追記する",
          "timeout": 10000
        }
      ]
    }
  ]
}
